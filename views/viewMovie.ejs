<%- include('adminSidebar')%>




  <!-- Content wrapper -->
  <div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
      <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Admin /</span> View Admin</h4>

      <!-- Basic Bootstrap Table -->
      <div class="card">
        <h5 class="card-header">Show All Movie</h5>
        <div class="text-nowrap">
          <table class="table">
            <thead>
              <tr>
                <th>name</th>
                <th>Release Date</th>
                <th>IMDB</th>
                <th>Poster</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody class="table-border-bottom-0">

              <%for(let Rec of allMovie){%>
                <tr>
                  <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                      <%= Rec.name%>
                    </strong></td>
                  <td>
                   <% let date=Rec.release_date.toString(); let finalDate=date.substr(4,11)%>
                    <%=finalDate %>
                  </td>
                  
                  <td>
                    <%= Rec.imdb%>
                  </td>
                  <td>
                    <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                      <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"
                        class="avatar avatar-xs pull-up" style="width: 200px;
                        height: auto;
                        object-fit: cover;" title="<%= Rec.name%>">
                        <img src="<%= Rec.thumbnail%>" alt="Avatar" />
                      </li>
                    </ul>
                  </td>
                  <td>
                    <%if(Rec.isActive){%>
                    <span class="badge bg-label-primary me-1">Active</span>
                    <%}else{%>
                      <span class="badge bg-label-warning me-1">Deactive</span>
                      <%}%>
                  </td>
                      
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="/admin/updateMovie/<%= Rec.id%>"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                        <a class="dropdown-item" href="/admin/deleteMovie/<%= Rec.id%>"><i class="bx bx-trash me-1"></i> Delete</a>
                        <%if(Rec.isActive){%>
                          <a class="dropdown-item" href="/admin/movieDeactiveData/<%= Rec.id%>"><i class="bx bx-trash me-1"></i>Deactive</a>
                          <%}else{%>
                            <a class="dropdown-item" href="/admin/movieActiveData/<%= Rec.id%>"><i class="bx bx-trash me-1"></i>Active</a>
                            <%}%>

                      </div>
                    </div>
                  </td>
                </tr>
                <%}%>
            </tbody>
          </table>
          <ul class="pagination" style="justify-content: center">
            <%for(let i=1; i<=pagination; i++){%>
              <li class="page-item">
                <a class="page-link" href="?page=<%= i%>"><%=i%></a>
              </li>
              <%}%>
          </ul>
        </div>
      </div>
      <!--/ Basic Bootstrap Table -->


    </div>

    <!-- / Content -->
    <%- include('adminFooter')%>